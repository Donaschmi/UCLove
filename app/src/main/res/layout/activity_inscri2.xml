<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/title_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30px"
            android:paddingTop="30px">


            <TextView
                android:id="@+id/textView_title_profile"
                style="@style/Titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/texte_inscription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_register"

            android:padding="5dp">


            <View
                android:id="@+id/view_sep"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/right_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_sep"
                android:padding="@dimen/paddingLayout">

                <TextView
                    android:id="@+id/gender"
                    style="@style/SimpleTexte"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:text="N/A" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_profile_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/right_profile_gender">

                <Button
                    android:id="@+id/button_Chg_Gender"
                    style="@style/BoutonCarre"
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:id="@+id/textView_gender"
                    style="@style/SimpleTexte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/button_Chg_Gender"
                    android:text="Gender"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_gender"
            android:padding="5dp">


            <View
                android:id="@+id/view_sep1"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/right_profile_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_sep1"
                android:padding="@dimen/paddingLayout">

                <EditText
                    android:id="@+id/age_field"
                    style="@style/ChampsUneLigne"
                    android:gravity="center_horizontal"
                    android:hint="@string/hint_age"
                    android:inputType="textVisiblePassword|textNoSuggestions" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_profile_age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/right_profile_age">

                <Button
                    android:id="@+id/button_Chg_Age"
                    style="@style/BoutonCarre"
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:id="@+id/textView_age"
                    style="@style/SimpleTexte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/button_Chg_Age"
                    android:text="Age"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_hair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_age"
            android:padding="5dp">


            <View
                android:id="@+id/view_sep2"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/right_profile_hair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_sep2"
                android:padding="@dimen/paddingLayout">

                <EditText
                    android:id="@+id/hair_field"
                    style="@style/ChampsUneLigne"
                    android:gravity="center_horizontal"
                    android:hint="@string/hint_hair"
                    android:inputType="textVisiblePassword|textNoSuggestions" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_profile_hair"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/right_profile_hair">

                <Button
                    android:id="@+id/button_Chg_Hair"
                    style="@style/BoutonCarre"
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:id="@+id/textView_hair"
                    style="@style/SimpleTexte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/button_Chg_Hair"
                    android:text="Hair"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_eyes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_hair"
            android:padding="5dp">


            <View
                android:id="@+id/view_sep3"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/right_profile_eyes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_sep3"
                android:padding="@dimen/paddingLayout">

                <EditText
                    android:id="@+id/eyes_field"
                    style="@style/ChampsUneLigne"
                    android:gravity="center_horizontal"
                    android:hint="@string/hint_eyes"
                    android:inputType="textVisiblePassword|textNoSuggestions" />




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_profile_eyes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/right_profile_eyes">

                <Button
                    android:id="@+id/button_Chg_Eyes"
                    style="@style/BoutonCarre"
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:id="@+id/textView_eyes"
                    style="@style/SimpleTexte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/button_Chg_Eyes"
                    android:text="Eyes"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_eyes"
            android:padding="5dp">


            <View
                android:id="@+id/view_sep4"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/right_profile_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_sep4"
                android:padding="@dimen/paddingLayout">

                <EditText
                    android:id="@+id/location_field"
                    style="@style/ChampsUneLigne"
                    android:gravity="center_horizontal"
                    android:hint="@string/hint_location"
                    android:inputType="textVisiblePassword|textNoSuggestions" />




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_profile_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/right_profile_location">

                <Button
                    android:id="@+id/button_Chg_Location"
                    style="@style/BoutonCarre"
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:id="@+id/textView_location"
                    style="@style/SimpleTexte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/button_Chg_Location"
                    android:text="Location"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_inclination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_location"
            android:padding="5dp">


            <View
                android:id="@+id/view_sep5"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/right_profile_inclination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/view_sep5"
                android:padding="@dimen/paddingLayout">

                <EditText
                    android:id="@+id/inclination_field"
                    style="@style/ChampsUneLigne"
                    android:gravity="center_horizontal"
                    android:hint="@string/hint_inclination"
                    android:inputType="textVisiblePassword|textNoSuggestions" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/left_profile_inclination"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/right_profile_inclination">

                <Button
                    android:id="@+id/button_Chg_Inclination"
                    style="@style/BoutonCarre"
                    android:layout_width="wrap_content"
                    android:layout_height="48px"
                    android:layout_centerVertical="true"

                    />

                <TextView
                    android:id="@+id/textView_inclination"
                    style="@style/SimpleTexte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/button_Chg_Inclination"
                    android:text="Inclination"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_inclination">

            <Button
                android:id="@+id/button_Chg_Picture"
                style="@style/BoutonCarre"
                android:layout_width="wrap_content"
                android:layout_height="48px"
                android:layout_toLeftOf="@+id/textView_picture" />

            <TextView
                android:id="@+id/textView_picture"
                style="@style/SimpleTexte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Picture" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_picture"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher"

            />
    </RelativeLayout>


</ScrollView>
