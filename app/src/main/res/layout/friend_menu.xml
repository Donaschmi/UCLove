<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30px"
            android:paddingTop="30px">

            <TextView
                android:id="@+id/login_ami"
                style="@style/Titre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nom ami" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_back"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_profile"
            android:layout_below="@+id/title_menu"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_menu_profile"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:layout_below="@id/profile_picture"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_fav"
                android:layout_toRightOf="@+id/img_menu_profile"
                android:text="Add to favorite"
                style="@style/GrosBouton"
                android:gravity="bottom"
                android:background="@android:color/transparent"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_preferences"
            android:layout_below="@+id/menu_profile"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_menu_preferences"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:layout_below="@id/profile_picture"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_chat"
                android:layout_toRightOf="@+id/img_menu_preferences"
                android:text="Chat"
                style="@style/GrosBouton"
                android:gravity="bottom"
                android:background="@android:color/transparent"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_people"
            android:layout_below="@+id/menu_preferences"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_menu_people"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:layout_below="@id/profile_picture"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_rdv"
                android:layout_toRightOf="@+id/img_menu_people"
                android:text="Send rendez-vous"
                style="@style/GrosBouton"
                android:gravity="bottom"
                android:background="@android:color/transparent"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu_friends"
            android:layout_below="@+id/menu_people"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_menu_friends"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:layout_below="@id/profile_picture"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_delete"
                android:layout_toRightOf="@+id/img_menu_friends"
                android:text="Delete Friend"
                style="@style/GrosBouton"
                android:gravity="bottom"
                android:background="@android:color/transparent"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/title_menu"
            android:background="@android:color/darker_gray" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menu_profile"
            android:background="@android:color/darker_gray" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menu_preferences"
            android:background="@android:color/darker_gray" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menu_people"
            android:background="@android:color/darker_gray" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menu_friends"
            android:background="@android:color/darker_gray" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/menu_friends" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/menu_friends" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/menu_friends" />


    </RelativeLayout>
</ScrollView>